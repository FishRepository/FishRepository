.main {
  background: #F5F7F6;
  height:90%;
}
.container {
  height: 100%;
  display: block;
  align-items: center;
  background: #FFF;
  border-bottom:1px solid #E5E5E5;
}
.container .title{
  height:18pt;
  color:#707070;
  font-size:10pt;
  overflow:hidden;
  border-bottom:1px solid #e5e5e5;
  padding:10px 0px;
  margin-left:10px;
}
.container .title text{
  padding-left: 10px;
}
.container .list{
  margin-top: 0px;
  height: 70%;
}
.container .list .item{
  padding:10px 0;
  position:relative;
  height:16pt;
  overflow:hidden;
  padding-left:10px;
  border-bottom:1px solid #e5e5e5;
  margin-left:10px;
  font-size:12pt;
  color: #000000;
  justify-content:space-between;
}
.container .list .item image{
  width:25px;
  height:25px;
  display:flex;
  float:right;
  margin-right:20px;
}
.more{
  display:flex;
  align-items:center;
  margin-left:20px;
  /* justify-content:center; */
  justify-content:space-between;
  font-size: 10pt;
  color: #12B362;
  height:30pt;
}
.moretips{
  display:flex;
  align-items:center;
  margin-left:20px;
  /* justify-content:center; */
  justify-content:space-between;
  font-size: 10pt;
  color: #B3B3B3;
  height:30pt;
}
.more image{
  width:15px;
  height:15px;
  margin-right:20px;
}
.more text{
  margin-left: 10px;
  font-size: 10pt;
  color: #12B362;
}
.foot{
  position:absolute;
  bottom:0px;
  display:inline-block;
  height:10%;
  width:100%;
  border-top:1px solid #FFFFFF;
  background:#F5F7F6;
}
.foot-left{
  position:absolute;
  left:10px;
  display:inline-block;
  color:#B3B3B3;
  font-size:10pt;
  bottom:10pt;
}
.foot-right{
  position:absolute;
  right:30px;
  display:inline-block;
  color:#B3B3B3;
  bottom:10pt;
  font-size:13pt;
}

.left-choose{
  color: #FFA200;
}

.right-choose{
  color: #12B362;
}