
.film-item{
  padding: 10px;
  display: flex;
  border:0;
  border-radius: 5px;
  border-top:2px solid #fff;
  border-bottom:2px solid #fff;
  border-left:1px solid #fff;
  border-right:1px solid #fff;
}
.film-image{
  width: 128px;
}
.film-image image{
  border-radius: 5%;
  width: 100%;
  height: 180px;
}
.film-info{
  padding-left: 10px;
  flex: 1;
}
.film-title{
 font-size: 18px;
 color: #000000;
}
.film-year{
  font-size: 16px;
  color: #fff;
  background-color: #00D96D;
  border-radius: 2px;
  padding-left: 5px;
  padding-right: 5px;
  bottom: 1px;
  margin-bottom: 5px;
}
.file-pay-info{
  position: block;
  margin-bottom: 5px;
}
.hhhh{
  margin-top: 10%;
  padding-bottom: 38%;
}
.film-year-pay{
  font-size: 16px;
  color: #fff;
  background-color:#ffd966;
  border-radius: 2px;
  border:1px;
  border-color: #ffd966;
  padding-left: 5px;
  padding-right: 5px;
  bottom: 1px;
  margin-bottom: 5px;
}
.file-money-icon{
  width: 25px;
  height: 25px;
  float: left;
}
.film-year-money{
  font-size: 18px;
  float: left;
  margin-top: 1px;
}
.pay-btn{
  width: 80px;
  height: 30px;
  font-size: 16px;
  color: #fff;
  background: #00D96D;
