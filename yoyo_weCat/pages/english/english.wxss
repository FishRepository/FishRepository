.film-item{
  padding: 10px;
  display: flex;
  border-radius: 5%;
  border: 2px solid #00D96D;
  margin-bottom: 5px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;
}
.film-image{
  width: 128px;
}
.film-image image{
  border-radius: 5%;
  width: 100%;
  height: 180px;
}
.film-info{
  padding-left: 10px;
  flex: 1;
}
.film-info view{
  margin-bottom: 10px;
}
.film-info .label{
  margin-right: 5px;
  color: #666;
}
.film-info .rating{
  color: #e09015;
}
.film-title{
 font-size: 18px;
 color: #000000;
}
.film-year{
  font-size: 16px;
  color: #00D96D;
}