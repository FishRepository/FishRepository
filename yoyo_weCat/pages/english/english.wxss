
.film-item{
  padding: 10px;
  display: flex;
  border:0;
  border-top:2px solid #fff;
  border-bottom:2px solid #fff;
  border-left:1px solid #fff;
  border-right:1px solid #fff;
}
.film-image{
  width: 128px;
}
.film-image image{
  border-radius: 5%;
  width: 100%;
  height: 180px;
}
.film-info{
  padding-left: 10px;
  flex: 1;
  position: relative
}
.film-title{
 font-size: 18px;
 color: #000000;
 position: absolute;
}
.film-year{
  font-size: 16px;
  color: #fff;
  background-color: #00D96D;
  border-radius: 2px;
  padding-left: 5px;
  padding-right: 5px;
  position: absolute;
  bottom: 1px;
  margin-bottom: 5px;
}