.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding-right: 8px;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.news-image{
  width: 60px;
  height: 60px;
}

.order-title{
  font-size: 16px;
}

.order-money{
  color:#00D96D;
  font-size: 12px;
  padding-left: 50px;
}

.order-pay{
  font-size: 14px;
  color: #00D96D;
}

.order-pay-fail{
  font-size: 14px;
  color: #f4ea2a;
}

.order-time{
  font-size: 12px;
  padding-left: 30px;
}